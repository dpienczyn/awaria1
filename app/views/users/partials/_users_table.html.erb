<div class="wrapper">
        <table id="acrylic">
            <thead>
                <tr>
        <th>L.p</th>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>Email</th>
        <th>Dział</th>
        <th>Stanowisko</th>
        <th>Pracownik</th>
        <th>Admin</th>
        <th>Utworzony</th>
        <th>Akcje</th>
        <th></th>
        <th></th>
        <th></th>
                </tr>
            </thead>
            <tbody>
            <% @users.order("created_at").each do |user| %>
                <tr>
                    <td data-label="L.p"><%= user.id%></td>
                    <td data-label="Imie"><%= user.first_name %></td>
                    <td data-label="Nazwisko"><%= user.last_name %></td>
                    <td data-label="Email"><%= user.email %></td>
                    <td data-label="Dział"><%= Dzial.where(id:user.dzial_id).pluck(:nazwa).last %></td>
                    <td data-label="Stanowisko"><%= Stanowisko.where(id:user.stanowisko_id).pluck(:nazwa).last %></td>
                    <td data-label="Pracownik"><%= user.ispracownik %></td>
                    <td data-label="Admin"><%= user.admin %></td>
                    <td data-label="Utworzony"><%= user.created_at %></td>
                    <td><%= link_to "Edytuj", edit_user_path(user), class:'btn btn-default btn-xs'%></td>
<td><%= link_to "Admin", grantadmin_user_path(user), method: :grantadmin, data: { confirm: "Jesteś pewny?" }, class:'btn btn-success btn-xs'%></td>
<td><%= link_to "Usuń", user_path(user), method: :delete, data: { confirm: "Jesteś pewny?" }, class:'btn btn-danger btn-xs' %></td>
<td><%= link_to "Pracownik", pracownik_user_path(user), method: :pracownik, data: { confirm: "Jesteś pewny?" }, class:'btn btn-primary btn-xs' %></td>
                 </tr>
                 <% end %>
            </tbody>
        </table>
    </div>

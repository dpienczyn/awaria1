<h1>Zgłoszenia</h1>
<div class="jumbotron">
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <!-- <th>Klient</th>
      <th>Pracownik</th>
      <th>Dzial</th> -->
      <th>Priorytet</th>
      <th>Status</th>
      <th>Data zgłoszenia</th>
      <th>Data naprawy</th>
      <th>Opis uszkodzenia</th>
      <th>Nazwa urzadzenia</th>
      <!-- <th>Wysylka</th> -->
      <th>user_id</th>
      <th colspan="3">Akcje</th>
    </tr>
  </thead>

  <tbody>

    <% @zgloszenies.each do |zgloszeny| %>
    <% if current_user.id == zgloszeny.user_id || current_user.admin? %>
      <tr>
        <td><%= zgloszeny.id %></td>
        <!-- <td><%= zgloszeny.klient_id %></td>
        <td><%= zgloszeny.pracownik_id %></td>
        <td><%= Dzial.where(id:zgloszeny.dzial_id).pluck(:nazwa).last %></td>        -->
        <td><%= zgloszeny.priorytet %></td>
        <td><%= zgloszeny.status %></td>
        <td><%= zgloszeny.data_zgloszenia %></td>
        <td><%= zgloszeny.data_naprawy %></td>
        <td><%= zgloszeny.opis_uszkodzenia %></td>
        <td><%= zgloszeny.nazwa_urzadzenia %></td>
        <td><%= zgloszeny.user_id %></td>
        <!-- <td><%= zgloszeny.wysylka %></td> -->
        <td><%= link_to 'Pokaż', zgloszeny, class:'btn btn-xs btn-primary' %></td>
        <td><%= link_to 'Edytuj', edit_zgloszeny_path(zgloszeny), class:'btn btn-xs btn-warning' %></td>
        <td><%= link_to 'Usuń', zgloszeny, method: :delete, data: { confirm: 'Jesteś pewny?' }, class:'btn btn-xs btn-danger' %></td>
      </tr>
      <% end %>

      <% end %>
  </tbody>
</table>
</div>
<%= link_to 'Dodaj Zgłoszenie', new_zgloszeny_path, class:'btn btn-success' %>
<% if current_user.admin? %>
<%= link_to 'Zaplecze', static_pages_paneladmina_path, class:'btn btn-primary' %>
<% end %>
</div>

<%= form_for(zgloszeny) do |f| %>
  <% if zgloszeny.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(zgloszeny.errors.count, "error") %> prohibited this zgloszeny from being saved:</h2>

      <ul>
      <% zgloszeny.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %><br />

  <div class="field">
    <%= f.label :klient_id %><br/>
    <%= f.collection_select :klient_id, Klient.all, :id, :nazwa, prompt: "Wybierz" %>
  </div><br />

  <div class="field">
    <%= f.label :pracownik_id %><br/>
    <%= f.collection_select :pracownik_id, Pracownik.all, :id, :nazwa, prompt: "Wybierz" %>
  </div><br/>

  <div class="field">
    <%= f.label :dział_id %><br/>
    <%= f.collection_select :dzial_id, Dzial.all, :id, :nazwa, prompt: "Wybierz" %>
  </div><br/>

  <div class="field">
    <%= f.label :priorytet %><br/>
    <%= f.number_field :priorytet %>
  </div><br/>

  <div class="field">
    <%= f.label :status %><br/>
    <%= f.text_field :status %>
  </div><br/>

  <div class="field">
    <%= f.label :data_zgłoszenia %><br/>
    <%= f.date_select :data_zgloszenia %>
  </div><br/>

  <div class="field">
    <%= f.label :data_naprawy %><br/>
    <%= f.date_select :data_naprawy %>
  </div><br/>

  <div class="field">
    <%= f.label :opis_uszkodzenia %><br/>
    <%= f.text_area :opis_uszkodzenia %>
  </div><br/>

  <div class="field">
    <%= f.label :nazwa_urzadzenia %><br/>
    <%= f.text_area :nazwa_urzadzenia %>
  </div><br/>

  <div class="field">
    <%= f.label :wysyłka %><br/>
    <%= f.number_field :wysylka %>
  </div><br />
  <%= f.label :user_id %><br/>
  <%= f.number_field :user_id, :value => current_user.id %>

  <div class="actions">
    <%= f.submit "Dodaj zgłoszenie", class:'btn btn-success' %>
  </div>
<% end %><br />
